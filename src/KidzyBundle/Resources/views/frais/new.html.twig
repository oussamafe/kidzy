{% extends 'baseadmin.html.twig' %}
{% form_theme form 'form/form_errors.html.twig' %}
{% block content %}

    <div class="content-page">
        <div class="content">

            <!-- Start Content-->
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">
                        <div class="card-box">
                            <h4 class="header-title mt-0 mb-3">Ajout Charge</h4>
                            {{ form_start(form, {'attr': {'class': 'form-horizontal' , 'role' : 'form' , 'novalidate': 'novalidate' }}) }}
                                <div class="form-group row">
                                    {{ form_label(form.titre ,null , {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                                    <div class="col-sm-7">
                                        {{ form_widget(form.titre , {'attr': {'class': 'form-control' , 'placeholder': 'Titre'}}) }}
                                    </div>
                                    {{ form_errors(form.titre) }}
                                </div>
                                <div class="form-group row">
                                    {{ form_label(form.prix ,null , {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                                    <div class="col-sm-7">
                                        {{ form_widget(form.prix , {'attr': {'class': 'form-control' , 'placeholder': 'Prix' }}) }}
                                    </div>
                                    {{ form_errors(form.prix) }}
                                </div>
                                <div class="form-group row">
                                    <div class="offset-sm-4 col-sm-8">
                                        {{ form_widget(form) }}
                                        <input type="submit" class="btn btn-primary waves-effect waves-light mr-1" value="Confimer">
                                        <a class="btn btn-secondary waves-effect waves-light" href="{{ path('frais_index') }}">
                                            Annuler
                                        </a>
                                    </div>
                                </div>
                            {{ form_end(form) }}
                        </div><!-- end card-box -->
                    </div><!-- end col -->
                </div>
                <!-- end row -->
            </div> <!-- container-fluid -->

        </div> <!-- content -->
    </div>

{% endblock %}
